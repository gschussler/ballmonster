# Serve from /srv (Caddyâ€™s default root is /srv)
:8080 {
  root * /srv
  encode gzip zstd

  @html {
    path *.html
  }
  header @html Cache-Control "no-cache"

  @assets {
    not path *.html
  }
  header @assets Cache-Control "public, max-age=31536000, immutable"

  try_files {path} /index.html

  header -Server
}